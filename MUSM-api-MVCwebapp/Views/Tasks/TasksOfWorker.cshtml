@using Microsoft.AspNetCore.Authorization

@inject IAuthorizationService AuthorizationService

@model IEnumerable<MUSM_api_MVCwebapp.Models.TaskModel>

@{
    ViewData["Title"] = "Index";
}



@if (Model.Count() > 0 && Model != null)
{
    <h1>Tasks Of @Model.ElementAt(0).Worker.FullName</h1>


    @using (Html.BeginForm())
    {
        <p>
            SearchBox: @Html.TextBox("SearchString")
        </p>

        <p>
            Filter By Completion Status: @Html.ListBox("SelectedStatuses")

            Filter By Category: @Html.ListBox("SelectedCategories")

            Filter By Priority: @Html.ListBox("SelectedPriority")
        </p>

        <p>

            Sort By Oldest: @Html.CheckBox("ascending")
            Sort By DueDate: @Html.CheckBox("dueDate")

        </p>



        <p>
            <input type="submit" value="Search" />
            <button>
                @Html.ActionLink("Clear Filter", "Index")
            </button>
        </p>

    }
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Location)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CompletionStatus)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Priority)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Category)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DueDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateCompleted)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.CreatedAt)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Location)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CompletionStatus)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Priority)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DueDate)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.DateCompleted)
                    </td>
              
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedAt)
                    </td>
                   
                    <td>

                        <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>


                    </td>
                </tr>
            }
        </tbody>
    </table>

}
else

{
    <h1>No Tasks Found For This Worker</h1>

}

<div>
    <a asp-action="Index" asp-controller="Users" >Back To List</a>
</div>
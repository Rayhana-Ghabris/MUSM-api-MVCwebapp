@using Microsoft.AspNetCore.Authorization

@inject IAuthorizationService AuthorizationService

@model IEnumerable<MUSM_api_MVCwebapp.Models.TaskModel>

@{
    ViewData["Title"] = "Index";
}



@if (Model.Count() > 0 && Model != null)
{
    <h1>Tasks Of @Model.ElementAt(0).Worker.FullName</h1>


    @using (Html.BeginForm())
    {
        <p>
            SearchBox: @Html.TextBox("SearchString")
        
            Filter By Completion Status: @Html.ListBox("SelectedStatuses")

            Filter By Category: @Html.ListBox("SelectedCategories")

            Filter By Priority: @Html.ListBox("SelectedPriority")
        </p>

        <p>
            @Html.CheckBox("ascending") Sort By Oldest
        </p>

        <p>
            @Html.CheckBox("dueDate")  Sort By DueDate

        </p>



        <p>

            <form>
                <button class="btn btn-warning" type="submit" value="Search">Search</button>

                <button class="btn btn-secondary" style="text-decoration:none">
                    @Html.ActionLink("Clear Filter", "Index")
                </button>
            </form>


        </p>

    }
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Location)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CompletionStatus)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Priority)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Category)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DueDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateCompleted)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.CreatedAt)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Location)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CompletionStatus)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Priority)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DueDate)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.DateCompleted)
                    </td>
              
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedAt)
                    </td>
                   
                    <td>

                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-success">Details</a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-danger">Edit</a>


                    </td>
                </tr>
            }
        </tbody>
    </table>

}
else

{
    <h1>No Tasks Found For This Worker</h1>

}

<div>
    <a asp-action="Index" asp-controller="Users" class="btn btn-secondary">Back To List</a>
</div>
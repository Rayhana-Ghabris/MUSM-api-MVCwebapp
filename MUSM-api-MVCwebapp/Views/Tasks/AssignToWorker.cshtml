@model MUSM_api_MVCwebapp.Models.TaskModel

@{
    ViewData["Title"] = "AssignToWorker";
}


<meta charset="utf-8" />
<meta name="viewport" content="initial-scale=1, width=device-width" />
<link rel="stylesheet" href="~/css/global.css" />
<link rel="stylesheet" href="~/css/Workers.css" />
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" />
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&display=swap" />
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Noto Sans:wght@400&display=swap" />
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;700&display=swap" />


<h1>Workers</h1>

<a asp-action="Index">No Need To Assign A Worker</a>

@if (ViewBag.Workers != null && ViewBag.Workers.Count > 0)
{
    <div class="workers3">
        <div class="workers4">

            <div class="column-11">
                @for (int i = 0; i < ViewBag.Workers.Count; i++)
                {
                    @if (i % 2 == 0)
                    {
                        <div class="worker6">
                            <div class="details-photo6">
                                <div class="details6">
                                    <b class="john-smith6">@ViewBag.Workers[i].FullName</b>
                                    <div class="id12">
                                        <div class="id13">ID:</div>
                                        <div class="div7">@ViewBag.Workers[i].Id</div>
                                    </div>
                                    <div class="id12">
                                        <div class="id13">Email:</div>
                                        <div class="worker1emailcom6">@ViewBag.Workers[i].Email</div>
                                    </div>
                                    <div class="id12">
                                        <div class="id13">Specialty:</div>
                                        <div class="worker1emailcom6">@ViewBag.Workers[i].Speciality</div>
                                        <div class="carpentry13">
                                            <img class="carpentry-child3"
                                                 alt=""
                                                 src="~/public/ellipse-481.svg" />

                                            <img class="image-2-icon6"
                                                 alt=""
                                                 src="~/public/@ViewBag.Workers[i].Speciality-icon.png" />
                                        </div>
                                    </div>
                                </div>
                                <img class="image-8-icon6"
                                     alt=""
                                     src="~/public/image-81@2x.png" />
                            </div>
                            <div class="undo-evalution6">

                                <a class="btn btn-primary" asp-action="AssignToWorkerConfirmed" asp-route-WorkerId="@ViewBag.Workers[i].Id" asp-route-taskId="@ViewBag.TaskId">Select</a>

                            </div>
                        </div>
                    }
                }
            </div>

            <div class="column-11">
                @for (int i = 0; i < ViewBag.Workers.Count; i++)
                {
                    @if (i % 2 == 1)
                    {
                        <div class="worker6">
                            <div class="details-photo6">
                                <div class="details6">
                                    <b class="john-smith6">@ViewBag.Workers[i].FullName</b>
                                    <div class="id12">
                                        <div class="id13">ID:</div>
                                        <div class="div7">@ViewBag.Workers[i].Id</div>
                                    </div>
                                    <div class="id12">
                                        <div class="id13">Email:</div>
                                        <div class="worker1emailcom6">@ViewBag.Workers[i].Email</div>
                                    </div>
                                    <div class="id12">
                                        <div class="id13">Specialty:</div>
                                        <div class="worker1emailcom6">@ViewBag.Workers[i].Speciality</div>
                                        <div class="carpentry13">
                                            <img class="carpentry-child3"
                                                 alt=""
                                                 src="~/public/ellipse-481.svg" />

                                            <img class="image-2-icon6"
                                                 alt=""
                                                 src="~/public/@ViewBag.Workers[i].Speciality-icon.png" />
                                        </div>
                                    </div>
                                </div>
                                <img class="image-8-icon6"
                                     alt=""
                                     src="~/public/image-81@2x.png" />
                            </div>
                            <div class="undo-evalution6">

                                <a class="btn btn-primary" asp-action="AssignToWorkerConfirmed" asp-route-WorkerId="@ViewBag.Workers[i].Id" asp-route-taskId="@ViewBag.TaskId">Select</a>

                            </div>
                        </div>
                    }
                }
            </div>

        </div>
    </div>
}




